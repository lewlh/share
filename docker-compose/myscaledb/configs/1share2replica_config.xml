<?xml version="1.0"?>
<clickhouse>
    <logger>
        <level>information</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>100M</size>
        <count>10</count>
        <console>1</console>
    </logger>
    <remote_servers>
        <cluster_1s_2r>
            <shard>
                <replica>
                    <host>myscaledb1</host>
                    <port>9000</port>
                    <user>myscaledb</user>
                    <password>myscaledb</password>
                </replica>
                <replica>
                    <host>myscaledb2</host>
                    <port>9000</port>
                    <user>myscaledb</user>
                    <password>myscaledb</password>
                </replica>
            </shard>
        </cluster_1s_2r>
    </remote_servers>
    <zookeeper>
        <operation_timeout_ms>10000</operation_timeout_ms>
        <session_timeout_ms>30000</session_timeout_ms>
        <node>
            <host>keeper1</host>
            <port>9181</port>
        </node>
        <node>
            <host>keeper2</host>
            <port>9181</port>
        </node>
        <node>
            <host>keeper3</host>
            <port>9181</port>
        </node>
    </zookeeper>
    <distributed_ddl>
        <path>/clickhouse/task_queue/ddl</path>
    </distributed_ddl>
</clickhouse>
